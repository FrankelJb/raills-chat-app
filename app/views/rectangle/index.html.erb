<style type='text/css' media='screen'>
  canvas, img { display:block; margin-left: 1em; }
  textarea { display:block; margin:1em auto; }
</style>

<div class='container'>
  <div class='col-sm-8' id='left'>
    <div class='row'>
      <form class='dropzone dz-clickable' id='dropzone_div'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <canvas id='canvas' width='720' height='576' class='center-block'>
          This text is displayed if your browser does not support HTML5 Canvas.
        </canvas>
      </form>
    </div>
    <div class='row'>
      <div class='col-sm-1' id='radio_buttons'>
        <div class='radio'>
          <label>
            <input type='radio' name='radioName' id='json' value='json' checked>
            JSON
          </label>
        </div>
        <div class='radio'>
          <label>
            <input type='radio' name='radioName' id='xml' value='xml'>
            XML
          </label>
        </div>
      </div>
      <div class='col-sm-10'>
        <textarea class='form-control' rows='2' id='rectangle_details'></textarea>
      </div>
    </div>
  </div>
  <div class='col-sm-4' id='right'>
    <%= render 'right_images' %>
  </div>
</div>

